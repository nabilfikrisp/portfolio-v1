---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Container from "@/layouts/Container.astro";
import Root from "@/layouts/Root.astro";
import MainSection from "@/components/sections/MainSection.astro";
import MaxWidthWrapper from "@/layouts/MaxWidthWrapper.astro";
import AboutSection from "@/components/sections/AboutSection.astro";
import ExperienceSection from "@/components/sections/ExperienceSection.astro";
---

<Root>
  <Container>
    <Header />

    <MaxWidthWrapper fillVertical class="space-y-6 py-10">
      <MainSection />
      <AboutSection />
      <ExperienceSection />
    </MaxWidthWrapper>

    <Footer />
  </Container>
</Root>
